<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:LanguageLearningApp.ViewModels.Admin"
             xmlns:models="clr-namespace:LanguageLearningApp.Models"
             x:Class="LanguageLearningApp.Views.Admin.LessonsManagementPage"
             Title="Quản lý bài học">

 

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="15">
            <StackLayout Grid.Column="0">
                <Label Text="{Binding CurrentCourse.Title, StringFormat='Khóa học: {0}'}"
                       FontSize="18"
                       FontAttributes="Bold" />
                <Label Text="{Binding Lessons.Count, StringFormat='Số bài học: {0}'}" />
            </StackLayout>
            <StackLayout Grid.Column="1" Orientation="Horizontal">
                <Button Text="Thêm bài học"
                        Command="{Binding CreateLessonCommand}"
                        BackgroundColor="#3498db"
                        TextColor="White"
                        Margin="0,0,10,0" />
                <Button Text="Quay lại"
                        Command="{Binding BackToCoursesCommand}" />
            </StackLayout>
        </Grid>

        <!-- Danh sách bài học -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Lessons}"
                           SelectionMode="Single"
                           SelectionChanged="OnLessonSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:LessonModel">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Xóa"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AdminLessonViewModel}}, Path=DeleteLessonCommand}"
                                               CommandParameter="{Binding .}" />
                                    <SwipeItem Text="Câu hỏi"
                                               BackgroundColor="Green"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AdminLessonViewModel}}, Path=ManageQuestionsCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Grid Padding="10" RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*,Auto">
                                <Frame Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.RowSpan="2"
                                       CornerRadius="20"
                                       HeightRequest="40"
                                       WidthRequest="40"
                                       Padding="0"
                                       BackgroundColor="#3498db">
                                    <Label Text="{Binding Order}" TextColor="White" FontAttributes="Bold"
                                           HorizontalOptions="Center" VerticalOptions="Center" />
                                </Frame>

                                <Label Text="{Binding Title}" Grid.Row="0" Grid.Column="1"
                                       FontAttributes="Bold" Margin="10,0,0,0" />
                                <Label Text="{Binding Description}" Grid.Row="1" Grid.Column="1"
                                       TextColor="Gray" LineBreakMode="TailTruncation"
                                       MaxLines="2" FontSize="Small" Margin="10,0,0,0" />

                                <!-- Di chuyển thứ tự -->
                                <StackLayout Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                                             Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                                    <Button Text="↑" HeightRequest="30" WidthRequest="40" CornerRadius="15"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AdminLessonViewModel}}, Path=MoveUpCommand}"
                                            CommandParameter="{Binding .}" />
                                    <Button Text="↓" HeightRequest="30" WidthRequest="40" CornerRadius="15"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AdminLessonViewModel}}, Path=MoveDownCommand}"
                                            CommandParameter="{Binding .}" />
                                </StackLayout>
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="20">
                        <Image Source="no_lessons.png" HeightRequest="100" WidthRequest="100" />
                        <Label Text="Chưa có bài học nào cho khóa học này" HorizontalOptions="Center" />
                        <Button Text="Thêm bài học đầu tiên"
                                Command="{Binding CreateLessonCommand}"
                                BackgroundColor="#3498db"
                                TextColor="White"
                                HorizontalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Form chỉnh sửa/thêm mới bài học -->
        <Frame Grid.Row="0" Grid.RowSpan="3"
               IsVisible="{Binding IsEditing}"
               BackgroundColor="White"
               HasShadow="True"
               CornerRadius="10"
               Margin="20">
            <ScrollView>
                <StackLayout Spacing="15" Padding="10">
                    <Label Text="{Binding IsNewLesson, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Thêm bài học mới|Chỉnh sửa bài học'}"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding ErrorMessage}" TextColor="Red"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                           HorizontalOptions="Center" />
                    <Frame CornerRadius="10" HeightRequest="150" IsClippedToBounds="True" Padding="0" HorizontalOptions="Center">
                        <Grid>
                            <Image Source="{Binding ImageUrl, TargetNullValue='default_lesson.png'}" Aspect="AspectFill" />
                            <Button Text="Đổi ảnh" Command="{Binding PickImageCommand}" HorizontalOptions="Center" VerticalOptions="End" Margin="0,0,0,10" Opacity="0.8" />
                        </Grid>
                    </Frame>
                    <StackLayout>
                        <Label Text="Tiêu đề" />
                        <Entry Text="{Binding Title}" Placeholder="Nhập tiêu đề bài học" />
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Mô tả" />
                        <Entry Text="{Binding Description}" Placeholder="Nhập mô tả ngắn" />
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Nội dung chi tiết" />
                        <Editor Text="{Binding Content}" Placeholder="Nhập nội dung bài học" HeightRequest="100" />
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Link Video (nếu có)" />
                        <Entry Text="{Binding VideoUrl}" Placeholder="Nhập link video Youtube, Vimeo..." />
                    </StackLayout>
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                        <StackLayout Grid.Row="0" Grid.Column="0">
                            <Label Text="Thứ tự" />
                            <Entry Text="{Binding Order}" Keyboard="Numeric" Placeholder="Số thứ tự" />
                        </StackLayout>
                        <StackLayout Grid.Row="0" Grid.Column="1">
                            <Label Text="Điểm yêu cầu" />
                            <Entry Text="{Binding RequiredPoints}" Keyboard="Numeric" Placeholder="Điểm tối thiểu để mở" />
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="0">
                            <Label Text="Điểm tối đa" />
                            <Entry Text="{Binding MaxPoints}" Keyboard="Numeric" Placeholder="Điểm tối đa của bài" />
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="1">
                            <Label Text="Thời lượng (phút)" />
                            <Entry Text="{Binding EstimatedMinutes}" Keyboard="Numeric" Placeholder="Số phút hoàn thành" />
                        </StackLayout>
                    </Grid>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="0,10,0,0">
                        <Button Text="Lưu" Command="{Binding SaveLessonCommand}" BackgroundColor="#2ecc71" TextColor="White" WidthRequest="120" />
                        <Button Text="Hủy" Command="{Binding CancelEditCommand}" BackgroundColor="#e74c3c" TextColor="White" WidthRequest="120" />
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </Frame>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.RowSpan="3"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="#3498db"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
    </Grid>
</ContentPage>
