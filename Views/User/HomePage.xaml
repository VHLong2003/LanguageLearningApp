<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LanguageLearningApp.Views.User.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="Danh sách loại khóa học" FontAttributes="Bold" FontSize="22"/>
            <CollectionView ItemsSource="{Binding CourseTypes}" SelectionMode="Single"
                            SelectionChanged="OnCourseTypeSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,5,0,5" BorderColor="#e0e0e0" CornerRadius="10">
                            <Label Text="{Binding}" FontSize="18"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
