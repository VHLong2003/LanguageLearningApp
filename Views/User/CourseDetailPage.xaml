<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:LanguageLearningApp.ViewModels.User"
    x:Class="LanguageLearningApp.Views.User.CourseDetailPage">

    <ContentPage.BindingContext>
        <vm:CourseDetailViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Image Source="{Binding Course.ImageUrl}" HeightRequest="120"/>
            <Label Text="{Binding Course.Title}" FontSize="22" FontAttributes="Bold"/>
            <Label Text="{Binding Course.Description}" FontSize="16"/>

            <Label Text="Danh sách bài học" FontAttributes="Bold" Margin="0,16,0,0"/>
            <CollectionView ItemsSource="{Binding Course.Lessons}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="4" Padding="8" BorderColor="LightGray">
                            <HorizontalStackLayout>
                                <Label Text="{Binding Title}" FontAttributes="Bold"/>
                                <Button Text="Bắt đầu học"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CourseDetailViewModel}}, Path=StartLessonCommand}"
                                        CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
